<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RaktarKezeloMaui.View.DeliveryPage"
             Title="Csomagküldés">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30">
            <Entry x:Name="CustomerNameEntry" Placeholder="Vásárló neve" />
            <Entry x:Name="AddressEntry" Placeholder="Cím" />
            <Entry x:Name="ZipCodeEntry" Placeholder="Irányítószám" />

            <Button Text="Csomag küldése" Clicked="OnSendPackageClicked" />
            <Button Text="Státusz lekérdezése" Clicked="OnGetStatusClicked" />

            <Label x:Name="ResultLabel" TextColor="Black" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
